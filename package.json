  },
  "devDependencies": {
    "@changesets/cli": "^2.10.1",
    "@tsconfig/node12": "^1.0.7",
    "@types/jest": "^26.0.10",
    "@types/prettier": "^2",
    "fast-check": "^2.2.0",
    "husky": "^4.2.5",
    "jest": "^26.4.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "sort-package-json": "^1.44.0",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  }
