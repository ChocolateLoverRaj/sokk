{
  "name": "sokk",
  "version": "0.1.0",
  "description": "Round/ceil/float to any integer multiple",
  "repository": "github:aussiegeek/sokk",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "prepare": "rm -rf dist && tsc --build tsconfig.build.json",
